{% extends 'main.html.twig' %}

{% block title %}{{ trailers | length }} iTunes Movie trailers{% endblock %}

{% block content %}
    <div class="container">
        <h1 class="mt-5 mb-4">{{ trailers | length }} iTunes Movie trailers</h1>
        <p>Сейчас - <b>{{ now_date_time }}</b>, Название класса - <b>{{ controller_name }}</b>, Название метода - <b>{{ method_name }}</b></p>
        <table class="table table-bordered">
            {% for trailer in trailers %}
                <tr>
                    <td>{{ trailer.title }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
